{{{render-bootstrap-config}}}
{{{render-javascript-tags 'footer'}}}
{{{render-client-component-templates}}}

<footer>
  <div class="container">
    <div class="row text-left">
      <div class="col-md-4">
        <div class="footer-item-1">
          <h4>Contatos</h4>
          <address>
            {{#if req.we.systemSettings.siteAddress}}
              <p>
                <i class="glyphicon glyphicon-pushpin" aria-hidden="true"></i> {{req.we.systemSettings.siteAddress}}
              </p>
            {{/if}}
            <ul class="list-unstyled">
              {{#if req.we.systemSettings.sitePhone1}}
                <li>
                  <i class="glyphicon glyphicon-earphone" aria-hidden="true"></i> Telefone 1: {{req.we.systemSettings.sitePhone1}}
                </li>
              {{/if}}
              {{#if req.we.systemSettings.sitePhone2}}
                <li>
                  <i class="glyphicon glyphicon-earphone" aria-hidden="true"></i> Telefone 2: {{req.we.systemSettings.sitePhone2}}
                </li>
              {{/if}}
              {{#if req.we.systemSettings.siteDaysOfService}}
                <li>
                  <i class="glyphicon glyphicon-time"aria-hidden="true"></i> {{req.we.systemSettings.siteDaysOfService}}
                </li>
              {{/if}}
              {{#if req.we.systemSettings.siteEmail1}}
                <li>
                  <i class="glyphicon glyphicon-envelope"aria-hidden="true"></i> <a href="mailto:{{req.we.systemSettings.siteEmail1}}">Email: {{req.we.systemSettings.siteEmail1}}</a>
                </li>
              {{/if}}
              {{#if req.we.systemSettings.siteEmail2}}
                <li>
                  <i class="glyphicon glyphicon-envelope"aria-hidden="true"></i> <a href="mailto:{{req.we.systemSettings.siteEmail2}}">Email: {{req.we.systemSettings.siteEmail2}}</a>
                </li>
              {{/if}}
            </ul>

            <br>{{we-menu req.we.menu.social class="list-inline icon-style-1"}}
          </address>
        </div>
      </div>
      <div class="col-md-4">
        <h4>Sobre</h4>
        <p class="footer-site-description">{{{req.we.systemSettings.siteDescription}}}</p>
      </div>
      <div class="col-md-4">
        {{#if req.we.systemSettings.googleMapsKey}}
          {{#if req.we.systemSettings.siteAddress}}
            <iframe
              width="100%"
              height="300"
              frameborder="0" style="border:0"
              src="https://www.google.com/maps/embed/v1/place?key={{req.we.systemSettings.googleMapsKey}}
                &q={{req.we.systemSettings.siteName}}, {{req.we.systemSettings.siteAddress}}" allowfullscreen>
            </iframe>
          {{/if}}
        {{/if}}

      </div>
    </div>
    <div class="row text-center">
      <div class="col-md-6 col-md-offset-3 text-center">
        <hr>
        <p>{{{req.we.systemSettings.siteFooter}}}<p>
      </div>
    </div>

    <br>
  </div>
</footer>