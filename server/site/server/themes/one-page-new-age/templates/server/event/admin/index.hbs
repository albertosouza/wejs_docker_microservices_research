<div class="row contents">
  <div class="col-md-4">
    // sidebar
  </div>
  <!-- Blog Post Content Column -->
  <div class="col-lg-8">
    <div class="row">
      <div class="col-md-4">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-user-plus fa-5x"></i>
              </div>
              <div class="col-xs-9 text-right">
                <div class="huge">{{metadata.cfRegistrationCount}}</div>
                <div>{{t 'event_admin_registration'}}</div>
              </div>
            </div>
          </div>
          {{#link-to 'cfregistration.find' event.id}}
            <div class="panel-footer">
              <span class="pull-left"><i class="glyphicon glyphicon-link"></i> {{t 'View.details'}}</span>
              <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
              <div class="clearfix"></div>
            </div>
          {{/link-to}}
          </a>
        </div>
      </div>
      <div class="col-md-4">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-life-ring fa-5x"></i>
              </div>
              <div class="col-xs-9 text-right">
                <div class="huge">{{metadata.cfcontactCount}}</div>
                <div>{{t 'Messages'}}</div>
              </div>
            </div>
          </div>
          {{#link-to 'cfcontact.find' event.id}}
            <div class="panel-footer">
              <span class="pull-left"> <i class="glyphicon glyphicon-link"></i> {{t 'View.details'}}</span>
              <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
              <div class="clearfix"></div>
            </div>
          {{/link-to}}
          </a>
        </div>
      </div>
    {{#if sessionsToRegister}}
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <i class="fa fa fa fa-users fa-fw"></i> {{t 'cfsession.with.requireRegistration'}}
          </div>
          <div class="panel-body">
            <table class="table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>{{t 'title'}}</th>
                  <th>{{t 'subscriptions'}}</th>
                  <th>{{t 'cfroom.vacancy.avaible'}}</th>
                </tr>
              </thead>
              <tbody>
               {{#each sessionsToRegister}}
                {{#if haveVacancy}}
                  <tr>
                    <td>{{id}}</td>
                    <td>
                    {{#link-to 'cfsession.findOne' eventId id}}
                      {{title}}
                    {{/link-to}}
                    </td>
                    <td>
                      {{#link-to 'cfsession.subscribers'  eventId id class="btn btn-default btn-sm"}}
                        <i class="fa fa-users"></i>
                      {{/link-to}} {{#link-to 'cfsession.exportSubscribers' eventId id class="btn btn-default btn-sm"}}
                        <i class="glyphicon glyphicon-floppy-open"></i>
                      {{/link-to}}
                    </td>
                    <td>
                      {{subscribers.length}} / {{room.vacancy}}
                    </td>
                  </tr>
                {{else}}
                  <tr>
                    <td>{{id}}</td>
                    <td>
                      {{#link-to 'cfsession.findOne' eventId id}}
                        {{title}}
                      {{/link-to}}
                    </td>
                    <td>
                      {{#link-to 'cfsession.subscribers' eventId id class="btn btn-default btn-sm"}}
                        <i class="fa fa-users"></i>
                      {{/link-to}} {{#link-to 'cfsession.exportSubscribers' eventId id class="btn btn-default btn-sm"}}
                        <i class="glyphicon glyphicon-floppy-open"></i>
                      {{/link-to}}
                    </td>
                    <td>
                      <span class="text-danger">{{subscribers.length}} / {{room.vacancy}}</span>
                    </td>
                  </tr>
                {{/if}}
              {{/each}}

              </tbody>
            </table>

          </div>
          <div class="panel-footer">
            <tr>
              <td colspan="3">
                {{#link-to 'cfsession.find' event.id}}
                  <i class="glyphicon glyphicon-link"></i>
                  {{t 'View.details'}}
                {{/link-to}}
              </td>
            </tr>
          </div>
        </div>
      </div>
    {{/if}}
    </div>
  </div>
</div>