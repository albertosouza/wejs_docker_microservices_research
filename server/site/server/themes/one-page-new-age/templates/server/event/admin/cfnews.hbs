<div class="row">
  <div class="col-lg-12 actions">{{we-action-create-btn model req event.id}}</div>
  <div class="col-lg-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>id</th>
          <th>{{t 'title'}}</th>
          <th>{{t 'teaser'}}</th>
          <th>{{t 'actions'}}</th>
        </tr>
      </thead>
      <tbody>
      {{#each data}}
        <tr>
          <td>{{id}}</td>
          <td>{{title}}</td>
          <td>{{{teaser}}}</td>
          <td>
            {{we-action-view-btn 'cfnews' this ../req eventId id }}
            {{we-action-edit-btn 'cfnews' this ../req eventId id }}
            {{we-action-delete-btn 'cfnews' this ../req eventId id }}
          </td>
        </tr>
      {{/each}}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="4">
            <div class="paginate-sumary">
              {{t 'paginate.sumary' recordsLength=data.length count=metadata.count}}
            </div>
            {{paginate count=metadata.count limit=query.limit currentPage=query.page req=req}}
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>