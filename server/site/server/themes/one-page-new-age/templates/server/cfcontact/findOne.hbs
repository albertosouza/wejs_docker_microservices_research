

<div class="row">
  <div class="col-lg-12">
    <form class="form" action="{{req.path}}/edit" method="post">
      <input type="hidden" name="redirectTo" value="{{req.path}}">
      {{#ifCond data.status 'closed'}}
        <div class="form-group">
          <button name="status" value="closed" type="submit" class="btn btn-default">{{t 'cfcontact.open'}}</button>
        </div>
      {{else}}
        <div class="form-group">
          <button name="status" value="closed" type="submit" class="btn btn-default">{{t 'cfcontact.close'}}</button>
        </div>
      {{/ifCond}}
    </form>
  </div>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="form-group">
          <label for="createdAt" class="control-label">Data Criação</label>
          <p class="form-control-static">{{we-date data.createdAt }}</p>
        </div>
        <div class="form-group">
          <label for="name" class="control-label">Nome</label>
          <p class="form-control-static">{{ data.name }}</p>
        </div>
        <div class="form-group">
          <label for="email" class="control-label">Email</label>
          <p class="form-control-static">{{ data.email }}</p>
        </div>
        <div class="form-group">
          <label for="status" class="control-label">Status</label>
          <p class="form-control-static">{{ data.status }}</p>
        </div>
        <div class="form-group">
          <label for="message" class="control-label">Mensagem</label>
          <p class="form-control-static">{{ data.message }}</p>
        </div>
      </div>
    </div>
  </div>
</div>