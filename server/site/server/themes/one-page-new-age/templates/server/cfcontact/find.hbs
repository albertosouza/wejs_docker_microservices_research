<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>id</th>
          <th>{{t 'name'}}</th>
          <th>{{t 'status'}}</th>
          <th>{{t 'createdAt'}}</th>
          <th>{{t 'actions'}}</th>
        </tr>
      </thead>
      <tbody>
      {{#each data}}
        <tr class="{{statusClass}}">
          <td>{{id}}</td>
          <td>{{name}}</td>
          <td>{{status}}</td>
          <td>{{we-date createdAt }}</td>
          <td>
            <form class="form form-inline" action="{{../req.path}}/{{id}}/edit" method="post" style="display: inline;">
              <input type="hidden" name="redirectTo" value="{{../req.path}}">
              {{#ifCond status 'closed'}}
                <div class="form-group">
                  <button name="status" value="opened" type="submit" class="btn btn-sm btn-default">{{t 'cfcontact.open'}}</button>
                </div>
              {{else}}
                <div class="form-group">
                  <button name="status" value="closed" type="submit" class="btn btn-sm btn-default">{{t 'cfcontact.close'}}</button>
                </div>
              {{/ifCond}}
            </form>
            {{ we-action-view-btn 'cfcontact' this ../req eventId id }}
            {{ we-action-delete-btn 'cfcontact' this ../req eventId id }}
          </td>
        </tr>
      {{/each}}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="4">
            {{paginate count=metadata.count limit=query.limit currentPage=query.page req=req}}
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>