<table class="table table-condensed table-bordered">
  <tbody>
  {{#each terms as |term|}}
    <tr>
      <td class="content-tag-selector-term">{{term}}</td>
      <td width="35px">
        <button {{action 'onRemoveTag'}} type="button" class="btn btn-sm btn-default"><i class="glyphicon glyphicon-remove text-danger"></i></button>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>

<form class="form-inline" {{action 'onAddTag'}}>
  <fieldset>
    <div class="form-group">
      {{input value=newTerm class="form-control"}}
      <button class="btn btn-default">
        <i class="fa fa-plus"></i>
        {{t 'content.tag.Add'}}
      </button>
    </div>
  </fieldset>
</form>